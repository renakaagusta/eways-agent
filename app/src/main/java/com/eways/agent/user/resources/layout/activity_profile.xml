<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/rlUserImage"
                    android:layout_alignParentStart="true"
                    android:text="Nama User"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/title"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:id="@+id/rlUserImage"
                    android:layout_width="110dp"
                    android:layout_height="112dp"
                    android:clipToPadding="false"
                    android:layout_alignParentEnd="true"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="7dp"
                    android:layout_centerVertical="true">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civUserImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/user_agent"
                        android:layout_alignParentEnd="true"
                        android:elevation="5dp"/>
                    <ImageView
                        android:id="@+id/ivChangeImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:background="@drawable/circle_bgwhite"
                        android:src="@drawable/ic_pencil"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:elevation="5dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite"
                android:orientation="vertical"
                android:elevation="5dp">
                <LinearLayout
                    android:id="@+id/llUserFullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/editTextLabel"
                        android:text="@string/nama_lengkap"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/darkText"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tvUserFullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="Nama User"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_pencil"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llUserNIK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/editTextLabel"
                        android:text="@string/nik"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/darkText"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tvUserNIK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="NIK User"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_pencil"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llUserPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/editTextLabel"
                        android:text="@string/nomor_hp"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/darkText"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tvUserPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="Nomor HP User"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_pencil"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/editTextLabel"
                        android:text="@string/email"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/darkText"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="Email User"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_pencil"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llUserAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/editTextLabel"
                        android:text="@string/alamat"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/darkText"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tvUserAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="Alamat User"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_pencil"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llEmployeeID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/editTextLabel"
                        android:text="@string/id_pegawai"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/darkText"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tvEmployeeID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="ID Pegawai User"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_pencil"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite"
                android:orientation="vertical"
                android:elevation="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/editTextLabel"
                    android:text="@string/cluster"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/darkText"/>
                <TextView
                    android:id="@+id/tvUserCluster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="@dimen/regularText"
                    android:text="Cluster User"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorRegularText"
                    android:layout_alignParentStart="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite"
                android:orientation="vertical"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="@string/ketentuan_layanan"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:tint="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="@string/kebijakan_privasi"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:tint="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:textSize="@dimen/regularText"
                            android:text="@string/bantuan"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/colorRegularText"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:tint="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="@dimen/regularText"
                android:textColor="@color/colorPrimary"
                android:text="@string/keluar"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>