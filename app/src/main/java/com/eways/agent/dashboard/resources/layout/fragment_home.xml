<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:id="@+id/llUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Nama User"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/darkText"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_notification"/>
                    <ImageView
                        android:id="@+id/ivNotificationAlert"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circle_bgprimary"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:background="@color/colorLine"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:rowCount="2"
                android:columnCount="4"
                android:clipToPadding="false">
                <LinearLayout
                    android:id="@+id/llPickupTicket"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_pickuptiket"
                            android:contentDescription="GGN"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvPickupTicketNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="GGN"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llPSB"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_psb"
                            android:contentDescription="@string/psb"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvPSBNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="@string/psb"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llGetCustomer"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_getcustomer"
                            android:contentDescription="@string/get_customer"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvGetCustomerNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="@string/get_customer"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llGantiPaket"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|top">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_gantipaket"
                            android:contentDescription="@string/ganti_paket"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvGantiPaketNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="Upgrade"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llTitipPaket"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|top">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_titippaket"
                            android:contentDescription="@string/titip_paket"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvTitipPaketNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="@string/titip_paket"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llTitipBelanja"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|top">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_titipbelanja"
                            android:contentDescription="Belanja"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvTitipBelanjaNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="Belanja"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llSOPP"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_marginTop="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|top">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_sopp"
                            android:contentDescription="@string/sopp"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvSOPPNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="@string/sopp"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llLayananBebas"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_marginTop="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|top">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="87dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="18dp"
                            android:src="@drawable/ic_layananbebas"
                            android:contentDescription="@string/layanan_bebas"
                            android:background="@drawable/circle_bgprimary"
                            android:elevation="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/tvLayananBebasNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_bgwhite"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:elevation="5dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorRegularText"
                        android:text="@string/layanan_bebas"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/smallText"
                        android:gravity="center"/>
                </LinearLayout>
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kabar_cluster"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/regularText"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvKabarClusterLainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lainnya"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/regularText"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="10dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:background="#fff"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvKabarCluster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_kabarcluster"
                    tools:itemCount="3"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>