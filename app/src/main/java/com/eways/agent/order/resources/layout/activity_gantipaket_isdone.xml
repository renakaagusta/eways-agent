<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/horizontalBoundary"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:fontFamily="@font/raleway_semibold"
                android:text="Pemesan"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="@dimen/regularElevation"
                android:orientation="horizontal"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user_customer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="Nama"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semibold"
                            android:text=":"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Nama"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="No Telepon"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semibold"
                            android:text=":"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:id="@+id/tvCustomerPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Nama"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="Alamat"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semibold"
                            android:text=":"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:id="@+id/tvCustomerAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Nama"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="Cluster"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semibold"
                            android:text=":"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />

                        <TextView
                            android:id="@+id/tvCustomerCluster"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Nama"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/regularText" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:fontFamily="@font/raleway_semibold"
                android:text="Detail Pesanan Ganti Paket"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:elevation="@dimen/regularElevation"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Paket Layanan Anda Saat Ini"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey" />

                <TextView
                    android:id="@+id/tvCurrentServicePacketName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Deskripsi Layanan"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey" />

                <TextView
                    android:id="@+id/tvCurrentServicePacketDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Paket Layanan Baru yang Anda Inginkan"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey" />

                <TextView
                    android:id="@+id/tvServicePacketName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Deskripsi Layanan"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey" />

                <TextView
                    android:id="@+id/tvServicePacketDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Tanggal Pesan"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:fontFamily="@font/raleway_semibold"
                android:text="Detail Transaksi"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:elevation="@dimen/regularElevation"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="150dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Fee Agen"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText" />

                    <TextView
                        android:id="@+id/tvAgentFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="end"
                        android:text="@string/dummy"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="8dp"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="150dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Total"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="end"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/regularText" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/catatan_agen"
                    android:textColor="@color/darkText"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="@dimen/regularText"/>
                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:text="Pelayanan sangat baik dan cepat"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:fontFamily="@font/raleway_semibold"
                android:text="Status"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:elevation="@dimen/regularElevation"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_order_done"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Selesai"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Review Pelayanan Agen"
                    android:textColor="@color/darkText"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="@dimen/regularText"/>
                <TextView
                    android:id="@+id/tvReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:text="Pelayanan sangat baik dan cepat"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>