<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/horizontalBoundary"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:background="@drawable/rcbottom_bgwhite">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/topBoundary"
                    android:fontFamily="@font/raleway_medium"
                    android:text="Pemesan"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/semiBigText"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rc_bgwhite"
                    android:elevation="@dimen/regularElevation"
                    android:padding="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/user_customer"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="20">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Nama"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=":"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:id="@+id/tvCustomerName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="Nama"
                                android:fontFamily="@font/raleway_medium"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="20">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="No Telepon"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=":"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:id="@+id/tvCustomerPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="Nama"
                                android:fontFamily="@font/raleway_medium"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="20">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Alamat"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=":"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:id="@+id/tvCustomerAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="Nama"
                                android:fontFamily="@font/raleway_medium"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="20">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Cluster"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=":"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                            <TextView
                                android:id="@+id/tvCustomerCluster"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="Nama"
                                android:fontFamily="@font/raleway_medium"
                                android:textSize="@dimen/regularText"
                                android:textColor="@color/colorRegularText"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Detail Pesanan Layanan Bebas"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/semiBigText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:background="@drawable/rc_bgwhite"
                    android:elevation="@dimen/regularElevation">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Nama Layanan"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorLightText"/>
                    <TextView
                        android:id="@+id/tvLayananBebasName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="PDAM"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGrey"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Detail Layanan"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorLightText"/>
                    <TextView
                        android:id="@+id/tvLayananBebasDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="PDAM"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGrey"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Tanggal Pesanan"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorLightText"/>
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="12 Januari 2020"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="Status Pesanan"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="Belum Dilayani"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/semiBigText"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/horizontalBoundary">
                <TextView
                    android:id="@+id/tvAccept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorPrimary"
                    android:text="Layani"
                    android:background="@drawable/rc_bgwhite"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>