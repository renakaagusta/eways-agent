<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/horizontalBoundary"
            android:paddingBottom="15dp"
            android:clipToPadding="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:fontFamily="@font/raleway_semibold"
                android:text="Pemesan"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation"
                android:padding="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/user_customer"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="Nama"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=":"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:text="Nama"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="No Telepon"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=":"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:id="@+id/tvCustomerPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:text="Nama"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="Alamat"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=":"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:id="@+id/tvCustomerAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:text="Nama"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="Cluster"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=":"
                            android:fontFamily="@font/raleway_semibold"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                        <TextView
                            android:id="@+id/tvCustomerCluster"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="12"
                            android:text="Nama"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/regularText"
                            android:textColor="@color/colorRegularText"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Detail Pesanan"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="10dp"
                    android:text="Titip Belanja"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Produk Bahan Makanan"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:background="@drawable/rc_bgwhite"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Barang"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Subtotal"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"/>\
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Belanja"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalBelanja"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Fee Agen"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvAgentFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorRegularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Tagihan"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalTransaction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/catatan_agen"
                    android:textColor="@color/darkText"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="@dimen/regularText"/>
                <EditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:lines="5"
                    android:gravity="top|left"
                    android:textColor="@color/darkText"
                    android:background="@drawable/bg_ordertext"
                    android:padding="10dp"
                    android:textSize="@dimen/regularText"
                    android:fontFamily="@font/raleway_medium"/>
                <TextView
                    android:id="@+id/tvInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="50dp"
                    android:text="@string/input"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regularText"
                    android:fontFamily="@font/raleway_semibold"
                    android:background="@drawable/rc_bgorange"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:text="Pelayanan sangat baik dan cepat"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:fontFamily="@font/raleway_semibold"
                android:text="Status saat ini"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_order_onprogress"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Progress"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="@dimen/regularText"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite_bprimary"
                android:elevation="@dimen/regularElevation"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_chat_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_pelanggan"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tvPaymentConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/konfirmasi_pembayaran"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:elevation="@dimen/regularElevation"
                android:background="@drawable/rc_bgprimary"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/selesai"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:elevation="@dimen/regularElevation"
                android:background="@drawable/rc_bglightgray"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>